{
    "compilerOptions": {
        "target": "es2017",
        "lib": ["es6", "DOM"],
        "removeComments": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strict": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "rootDir": "./",
        "outDir": ".build",
    },
}
